job {
  name 'demo-environment-deploy'
  description('Deploy release to the demo environment')
  parameters {
    choiceParam("action", ["apply", "destroy"],
                "Select if you want to apply changes to environments or destroy them.")
    stringParam("DEPLOY_ENV", "{{ demo_environment_name }}",
            "Select which environment you wish to run demo-env against")
    stringParam("REF_NAME", "{{ reference_name }}",
            "Select which branch or tag you wish to run demo-env with")
  }
  wrappers {
    colorizeOutput()
  }
  publishers {
    mailer("the-multi-cloud-paas-team@digital.cabinet-office.gov.uk", false, true)
    downstreamParameterized {
      trigger("terraform-deploy") {
        currentBuild()
      }
    }
  }
}
